generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  iconUrl   String?  // プロフィール画像URLを追加
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // パスワードリセット用
  resetToken       String?
  resetTokenExpiry DateTime?

  following Follow[] @relation("following")
  followers Follow[] @relation("followers")
  likes     Like[]
  
  // 称号関連
  activeTitle     Title?  @relation("ActiveTitle", fields: [activeTitleId], references: [id])
  activeTitleId   String?
  userTitles      UserTitle[]
}

model Post {
  id        String   @id @default(uuid())
  title     String
  category  Category
  comment   String?
  bitterness Int     // 苦さ 1-10
  richness   Int     // 濃さ 1-10
  sweetness  Int     // 甘さ 1-10
  images    Image[]
  shop      Shop?    @relation(fields: [shopId], references: [id])
  shopId    String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  likes     Like[]
}

enum Category {
  SWEET
  DRINK
}

model Image {
  id      String @id @default(uuid())
  url     String
  post    Post   @relation(fields: [postId], references: [id])
  postId  String
}

model Shop {
  id        String   @id @default(uuid())
  name      String
  address   String?
  lat       Float?
  lng       Float?
  posts     Post[]
}

model Follow {
  id         String   @id @default(uuid())
  follower   User     @relation("following", fields: [followerId], references: [id])
  followerId String
  following  User     @relation("followers", fields: [followingId], references: [id])
  followingId String
  createdAt  DateTime @default(now())

  @@unique([followerId, followingId])
}

model Like {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model Title {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  type        TitleType
  condition   Json      // 獲得条件をJSONで保存
  rarity      TitleRarity @default(COMMON)
  createdAt   DateTime  @default(now())
  
  users       User[]    @relation("ActiveTitle")
  userTitles  UserTitle[]
}

model UserTitle {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  title     Title    @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId   String
  unlockedAt DateTime @default(now())
  
  @@unique([userId, titleId])
}

enum TitleType {
  POST_COUNT
  TASTE_BITTER
  TASTE_RICH
  TASTE_SWEET
  TASTE_BALANCE
}

enum TitleRarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}
